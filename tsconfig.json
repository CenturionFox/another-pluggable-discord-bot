{
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es2017",
        "outDir": "./bin",
        "sourceMap": true,
        "module": "commonjs",
        "experimentalDecorators": true,
        "baseUrl": "src"
    },
    "include": [
        "src/**/*.ts",
        "config/**/*.json",
        "src/**/*.json",
        "src/modules/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "bin",
        "config/config.init.json"
    ]
}
